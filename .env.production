# Smart ZZP Hub - Production Environment Configuration
# Copy this file to .env and fill in actual values

# === DATABASE CONFIGURATION ===
# These values must match docker-compose.yml so the database is created correctly
DB_NAME=smart_zzp_hub
DB_USER=zzp_user
DB_PASSWORD=YOUR_SECURE_PASSWORD

# PostgreSQL connection string (use host "postgres" inside Docker Compose)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}
# For non-Docker deployments replace host "postgres" with "localhost" or your DB host

# === APPLICATION CONFIGURATION ===
# Port for the backend API server
PORT=4000

# Node environment (production/development)
NODE_ENV=production

# === SECURITY CONFIGURATION ===
# JWT Secret for authentication tokens (REQUIRED)
# Generate a strong random string: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# === CORS CONFIGURATION ===
# Frontend URL for CORS (if different from backend)
FRONTEND_URL=http://localhost

# === OPTIONAL CONFIGURATIONS ===
# Uncomment and configure as needed

# Log level (error, warn, info, debug)
# LOG_LEVEL=info

# Rate limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
# SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING
